<% include header %>

<h3>用户注册</h3>

<form method="post" action="/users/reg">
    <div class="group">
        <label for="username">用户名：</label>
        <input type="text" name="username" id="username" class="input-text">
        <span class="state"></span>
    </div>
    <div class="group">
        <label for="password">密　码：</label>
        <input type="password" name="password" id="password" class="input-text">
        <span class="state"></span>
    </div>
    <div class="group">
        <label for="password2">验　证：</label>
        <input type="password" name="password2" id="password2" class="input-text">
        <span class="state"></span>
        <input type="hidden" name="formhash" value=<%= random%>>
        <input type="hidden" id="pass" name="pass" value="">        
    </div>

    <div class="group group-foot">
        <button id="goreg" class="btn btn-primary">注册</button>
        <span><a href="/users/login">登陆</a></span>
    </div>
    
</form>









